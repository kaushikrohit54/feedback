<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="rekart_feedback" resource="default" engine="innodb" comment="Feeback or Query">
        <column xsi:type="int" name="entity_id" padding="10" unsigned="true" nullable="false" identity="true"
                comment="Entity ID"/>
        <column xsi:type="varchar" name="name" nullable="true" length="100" comment="Name"/>
        <column xsi:type="varchar" name="mobile" nullable="true" length="100" comment="Mobile"/>
        <column xsi:type="varchar" name="email" nullable="true" length="100" comment="Email"/>
        <column xsi:type="varchar" name="feedback" nullable="true" length="256" comment="Feeback\Query"/>
        <column xsi:type="varchar" name="disclaimer" nullable="true" length="10"/>
        <column xsi:type="datetime" name="create_date" nullable="false" default="CURRENT_TIMESTAMP"  comment="Created Date"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="entity_id"/>
        </constraint>
    </table>
</schema>